<Window x:Class="CoursesManager.UI.Dialogs.Windows.CourseDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoursesManager.UI.Dialogs.Windows" xmlns:controls="clr-namespace:CoursesManager.UI.Views.Controls"
        mc:Ignorable="d"
        Title="Toevoegen cursus" Height="600" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Border Background="{StaticResource SecondaryGradient}" CornerRadius="15">
            <StackPanel>
                <controls:PrimaryDialogHeader HeaderTitle="Cursus Toevoegen" />
                <Grid Margin="10, 20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Cursusnaam -->
                    <TextBlock Text="Cursusnaam*" Grid.Row="1" Grid.Column="0" Margin="0,0,0,10"/>
                    <TextBox Style="{DynamicResource TextBoxEditStudentStyle1}" 
                             Tag="Cursusnaam"
                             Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" />

                    <!-- Cursuscode -->
                    <TextBlock Text="Cursusnaam*" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
                    <TextBox Style="{DynamicResource TextBoxEditStudentStyle1}" 
                             Tag="Cursusnaam"
                             Grid.Row="2" Grid.Column="1" Margin="0,0,10,10" />

                    <!-- Locatie (dit wordt een dropdown box) -->
                    <TextBlock Text="Locatie*" Grid.Row="5" Grid.Column="0" Margin="0,0,0,5"/>
                    <ComboBox Width="200" Height="21" Grid.Row="6" Grid.Column="0" Margin="0,0,180,10">
                        <ComboBoxItem> Zwolle </ComboBoxItem>
                        <ComboBoxItem> Almere </ComboBoxItem>
                    </ComboBox>
                   

                    <!-- Startdate (dit wordt een datum kiezer) -->
                    <TextBlock Text="Cursusnaam*" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>
                    <TextBox Style="{DynamicResource TextBoxEditStudentStyle1}" 
                             Tag="Cursusnaam"
                             Grid.Row="4" Grid.Column="1" Margin="0,0,10,10" />

                    <!-- isactive (dit wordt een checkbox) -->
                    <TextBlock Text="Cursusnaam*" Grid.Row="3" Grid.Column="0" Margin="0,0,0,5"/>
                    <TextBox Style="{DynamicResource TextBoxEditStudentStyle1}" 
                             Tag="Cursusnaam"
                             Grid.Row="4" Grid.Column="0" Margin="0,0,10,10" />

                    <!-- image (dit wordt een documenten uploader) -->
                    <TextBlock Text="Cursusnaam*" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>
                    <TextBox Style="{DynamicResource TextBoxEditStudentStyle1}" 
                             Tag="Cursusnaam"
                             Grid.Row="6" Grid.Column="1" Margin="0,0,10,10" />
                </Grid>
            </StackPanel>
        </Border>
        
    </Grid>
</Window>
