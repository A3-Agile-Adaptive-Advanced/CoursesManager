<Window x:Class="CoursesManager.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="CanResize"
        AllowsTransparency="True"
        Background="Transparent"
        MinWidth="1500"
        MinHeight="600"
        d:Height="1080" d:Width="1920">

    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="5" CaptionHeight="0" />
    </WindowChrome.WindowChrome>


    <Window.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="WindowGrid"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1"
                                     BeginTime="0:0:0.1"/>
                    <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:0.1">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="BackgroundImage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="0" To="1" Duration="0:0:2"
                                     BeginTime="0:0:0.9">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <DoubleAnimation Storyboard.TargetName="BackgroundImage"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" Duration="0:0:1"
                                     BeginTime="0:0:3.2">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="BackgroundBorder"
                                     Storyboard.TargetProperty="Opacity"
                                     From="1" To="0" Duration="0:0:1"
                                     BeginTime="0:0:3.2">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseIn"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.Resources>
        <Style TargetType="Border" x:Key="WindowBorder">
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="Background" Value="{StaticResource SecondaryGradient}" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding WindowState, RelativeSource={RelativeSource AncestorType=Window}}" Value="Maximized">
                    <Setter Property="CornerRadius" Value="0" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid x:Name="WindowGrid" Opacity="0">

        <Border Style="{StaticResource WindowBorder}" Panel.ZIndex="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Grid.RowSpan="2" Panel.ZIndex="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border x:Name="ToastMessage" BorderBrush="Transparent" Background="Transparent" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Style="{StaticResource ToastMessage}">
                        <Grid Background="White">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Background="#FFA500" Visibility="{Binding ToastType, Converter={StaticResource ToastTypeToVisibilityConverter}, ConverterParameter=Warning}">
                                <materialDesign:PackIcon Kind="Warning" Height="55" Width="55" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Grid.Column="0" Background="Red" Visibility="{Binding ToastType, Converter={StaticResource ToastTypeToVisibilityConverter}, ConverterParameter=Error}">
                                <materialDesign:PackIcon Kind="CloseCircleOutline" Height="55" Width="55" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Grid.Column="0" Background="#5bb450" Visibility="{Binding ToastType, Converter={StaticResource ToastTypeToVisibilityConverter}, ConverterParameter=Confirmation}">
                                <materialDesign:PackIcon Kind="CheckCircleOutline" Height="55" Width="55" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                            </Border>
                            <Border Grid.Column="0" Background="Blue" Visibility="{Binding ToastType, Converter={StaticResource ToastTypeToVisibilityConverter}, ConverterParameter=Info}">
                                <materialDesign:PackIcon Kind="InfoCircleOutline" Height="55" Width="55" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White"/>
                            </Border>
                            <TextBlock TextWrapping="Wrap" FontFamily="Consolas" Margin="25 0 25 0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ToastText}" FontSize="18" Foreground="#02008C"/>
                        </Grid>
                    </Border>
                    
                    <Border Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Style="{StaticResource PrimaryHeaderBorder}" MouseDown="Header_MouseDown" Height="Auto" Panel.ZIndex="1">
                        <Grid Grid.IsSharedSizeScope="True" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button
                            Grid.Row="1"
                            Grid.Column="0"
                            Style="{StaticResource IconButtonWithShadowStyle}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseEnter">
                                            <i:InvokeCommandAction Command="{Binding MouseEnterButtonCommand}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="MouseLeave">
                                            <i:InvokeCommandAction Command="{Binding MouseLeaveButtonCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <materialDesign:PackIcon Kind="Menu"
                             Height="70" Width="52"
                             VerticalAlignment="Center"
                             Foreground="White"
                             Style="{StaticResource IconWithShadowStyle}" />
                                </Button>

                                <Button
                            Grid.Row="1"
                            Grid.Column="1"
                            Style="{StaticResource IconButtonWithShadowStyle}"
                            Command="{Binding GoBackCommand}">
                                    <materialDesign:PackIcon Kind="ArrowLeft"
                                                     Height="48" Width="48"
                                                     VerticalAlignment="Center"
                                                     Style="{StaticResource IconWithShadowStyle}" />
                                </Button>

                                <Button
                            Grid.Row="1"
                            Grid.Column="2"
                            Style="{StaticResource IconButtonWithShadowStyle}"
                            Command="{Binding GoForwardCommand}">
                                    <materialDesign:PackIcon Kind="ArrowRight"
                                                     Height="48" Width="48"
                                                     VerticalAlignment="Center"
                                                     Style="{StaticResource IconWithShadowStyle}" />
                                </Button>
                            </Grid>
                            <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Grid.ColumnSpan="7"
                            Text="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle, FallbackValue=Title}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="36" Foreground="White" FontWeight="Bold"/>

                            <Button
                            Grid.Row="1"
                            Grid.Column="5"
                            Style="{StaticResource IconButtonWithShadowStyle}"
                            Click="MinimizeWindow_Click">
                                <materialDesign:PackIcon Kind="WindowMinimize" Width="48" Height="48" Foreground="White"
                                                     Style="{StaticResource IconWithShadowStyle}" />
                            </Button>

                            <Button
                            Grid.Row="1"
                            Grid.Column="6"
                            Style="{StaticResource IconButtonWithShadowStyle}"
                            Click="MaximizeWindow_Click">
                                <materialDesign:PackIcon Kind="FullscreenExit" Width="48" Height="48" Foreground="White"
                                                     Style="{StaticResource IconWithShadowStyle}" />
                            </Button>

                            <Button
                            Grid.Row="1"
                            Grid.Column="7"
                            Style="{StaticResource IconButtonWithShadowStyle}"
                            Command="{Binding CloseCommand}">
                                <materialDesign:PackIcon Kind="Close" Width="48" Height="48" Foreground="White"
                                                     Style="{StaticResource IconWithShadowStyle}" />
                            </Button>
                        </Grid>
                    </Border>
                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>

                        <Border CornerRadius="0 0 15 0" Grid.Row="0" x:Name="Sidebar" Style="{StaticResource SidebarBorder}"
