                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding GoToStudentManagementView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid Grid.Row="1" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <materialDesign:PackIcon Kind="People" Grid.Column="1" Grid.Row="1"
                             Height="28" Width="28"
                             VerticalAlignment="Center"
                             Foreground="White"
                             Panel.ZIndex="1"/>
                                        <TextBlock Grid.Row="1" Panel.ZIndex="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="26" FontWeight="Bold">Cursisten beheer</TextBlock>
                                    </Grid>
                                </Border>

                                <Border Panel.ZIndex="2" Grid.Row="3" Grid.Column="1"  BorderBrush="Transparent" BorderThickness="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1E0F74"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Cursus beheer">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                                    <Setter Property="Background" Value="#2BFFFFFF"/>
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </DataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Cursus beheer" />
                                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding GoToCourseManagementView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <materialDesign:PackIcon Kind="University" Grid.Column="1" Grid.Row="1"
                                     Height="28" Width="28"
                                     VerticalAlignment="Center"
                                     Foreground="White"
                                     Panel.ZIndex="1"/>
                                        <TextBlock Panel.ZIndex="1" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="26" FontWeight="Bold">Cursus beheer</TextBlock>
                                    </Grid>
                                </Border>

                                <Border Panel.ZIndex="2" Grid.Row="5" Grid.Column="1"  BorderBrush="Transparent" BorderThickness="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1E0F74"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Cursus planning">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                                    <Setter Property="Background" Value="#2BFFFFFF"/>
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </DataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Cursus planning" />
                                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding GoToCalendarView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <materialDesign:PackIcon Kind="Calendar" Grid.Column="1" Grid.Row="1"
                                         Height="28" Width="28"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Panel.ZIndex="1"/>
                                        <TextBlock Panel.ZIndex="1" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" FontSize="26" FontWeight="Bold">Cursus planning</TextBlock>
                                    </Grid>
                                </Border>

                                <Border Panel.ZIndex="2" Grid.Row="7" Grid.Column="1"  BorderBrush="Transparent" BorderThickness="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1E0F74"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Emails">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                                    <Setter Property="Background" Value="#2BFFFFFF"/>
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </DataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Emails" />
                                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding GotoTemplateView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <materialDesign:PackIcon Kind="Email" Grid.Column="1" Grid.Row="1"
         Height="28" Width="28"
         VerticalAlignment="Center"
         Foreground="White"
         Panel.ZIndex="1" HorizontalAlignment="Center"/>
                                        <TextBlock Panel.ZIndex="1" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="26" FontWeight="Bold" Grid.ColumnSpan="2">Emails</TextBlock>
                                    </Grid>
                                </Border>


                                <Border Panel.ZIndex="2" Grid.Row="9" Grid.Column="1"  BorderBrush="Transparent" BorderThickness="0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#1E0F74"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Instellingen">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True">
                                                    <Setter Property="Background" Value="#2BFFFFFF"/>
                                                    <Setter Property="CornerRadius" Value="10"/>
                                                </DataTrigger>

                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding NavigationService.NavigationStore.CurrentViewModel.ViewTitle}" Value="Instellingen" />
                                                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                                <GradientStop Color="White" Offset="0" />
                                                                <GradientStop Color="White" Offset="0.02" />
                                                                <GradientStop Color="#20FFFFFF" Offset="0.03" />
                                                                <GradientStop Color="#10FFFFFF" Offset="0.7" />
                                                                <GradientStop Color="Transparent" Offset="1" />
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="MouseLeftButtonDown">
                                            <i:InvokeCommandAction Command="{Binding GoToConfigurationView}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <materialDesign:PackIcon Kind="Gear" Grid.Column="1" Grid.Row="1"
                                     Height="28" Width="28"
                                     VerticalAlignment="Center"
                                     Foreground="White"
                                     Panel.ZIndex="1" HorizontalAlignment="Center"/>
                                        <TextBlock Panel.ZIndex="1" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="26" FontWeight="Bold" Grid.ColumnSpan="2">Instellingen</TextBlock>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <ContentControl Content="{Binding NavigationService.NavigationStore.CurrentViewModel}" Panel.ZIndex="0" />
                    <Border Style="{DynamicResource DarkOverlay}"  Panel.ZIndex="1"
                    x:Name="OverlayBorder"
                    CornerRadius="0,0,15,15"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsHitTestVisible="{Binding IsSidebarHidden}">
                        <Grid />
                    </Border>
                </Grid>
            </Grid>
        </Border>
        <Border Panel.ZIndex="5"
            x:Name="DialogOverlay"
            Background="#80000000"
            CornerRadius="0,0,15,15"
            Visibility="{Binding IsDialogOpen, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Hidden}"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            IsHitTestVisible="{Binding IsDialogOpen}">
            <Grid />
        </Border>
        <Border  x:Name="BackgroundBorder" Background="White" IsHitTestVisible="False" HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch" Panel.ZIndex="5" Opacity="1">
            <Image x:Name="BackgroundImage" Source="{Binding BackgroundImage}" Opacity="0" IsHitTestVisible="False" Panel.ZIndex="6" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>