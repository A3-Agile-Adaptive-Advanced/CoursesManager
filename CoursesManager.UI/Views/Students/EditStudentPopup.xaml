<Window x:Class="CoursesManager.UI.Views.Students.EditStudentPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Student" Height="600" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            <!-- Basic Student Information -->
            <TextBlock Text="Voornaam" />
            <TextBox Text="{Binding Student.FirstName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Tussenvoegsel" />
            <TextBox Text="{Binding Student.Insertion, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Achternaam" />
            <TextBox Text="{Binding Student.LastName, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Email" />
            <TextBox Text="{Binding Student.Email, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Telefoonnummer" />
            <TextBox Text="{Binding Student.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Address Information -->
            <TextBlock Text="PostCode" />
            <TextBox Text="{Binding Student.PostCode, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Huisnummer" />
            <TextBox Text="{Binding Student.HouseNumber, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Plaats" />
            <TextBox Text="{Binding Student.Plaats, UpdateSourceTrigger=PropertyChanged}" />

            <!-- Courses Selection -->
            <TextBlock Text="Cursussen" Margin="0,10,0,0" />
            <ListBox x:Name="CoursesListBox"
                     ItemsSource="{Binding AllCourses}"
                     DisplayMemberPath="CourseName"
                     SelectionMode="Multiple"
                     Height="100" />

            <!-- Save and Cancel Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" Margin="0,0,10,0" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
