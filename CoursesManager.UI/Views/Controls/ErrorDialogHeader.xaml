<UserControl x:Class="CoursesManager.UI.Views.Controls.ErrorDialogHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CoursesManager.UI.Views.Controls"
             mc:Ignorable="d"
             d:Height="150" d:Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Style="{StaticResource ErrorDialogHeaderBorder}">
            <TextBlock Text="{Binding HeaderTitle, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=HeaderTitle}" FontSize="28" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>
    </Grid>
</UserControl>